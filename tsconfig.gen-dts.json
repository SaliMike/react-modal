{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist/js",
    "jsx": "react",
    "lib": ["es2017", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": false,
    "target": "es5"
  },
  "include": ["./src/*", "./src/**/*"],
  "exclude": [
    "./src/**/**.test.js",
    "./src/**/**.test.jsx",
    "./src/**/**.stories.js",
    "./src/**/**.stories.jsx"
  ]
}
